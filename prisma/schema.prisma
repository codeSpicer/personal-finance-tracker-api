
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum UserAction {
  LOGIN
  SIGNUP
  LOGOUT
  PASSWORD_CHANGE
  LOGIN_FAILED 
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      UserRole  @default(USER)
  otp       String?   
  otpExpiry DateTime? 
  isVerified Boolean  @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  expenses  Expense[]
  budgets   Budget[]
  auditLogs AuditLog[]
}

model Expense {
  id        Int      @id @default(autoincrement())
  amount    Float
  date      DateTime
  category  String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Budget {
  id        Int      @id @default(autoincrement())
  category  String
  limit     Float
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model AuditLog {
  id        Int       @id @default(autoincrement())
  userId    Int
  action    UserAction    
  ipAddress String?
  userAgent String?
  timestamp DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id])
}
